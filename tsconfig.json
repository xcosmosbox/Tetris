{
  "compilerOptions": {
    "target": "ES6",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "outDir": "./dist/",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": false,

    /* Linting */
    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true
  },
  "include": ["src"]
}